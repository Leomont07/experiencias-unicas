{
  "version": 2,
  "builds": [
    {
      "src": "src/main.jsx",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" } 
    },
    {
      "src": "server/src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"] 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "server/src/index.js" 
    },
    {
      "src": "/(.*)", 
      "dest": "/"
    }
  ],
  "installCommand": "npm install && cd server && npm install && cd .." 
}