{
  "version": 2,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    },
    {
      "src": "server/src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "server/src/index.js"
    },
    {
      "src": "/[^.]+",
      "dest": "/",
      "check": true
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "installCommand": "npm install && cd server && npm install && cd .."
}